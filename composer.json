{
    "name": "commissioner/commission-task-skeleton",
    "description": "Skeleton for Commissioner recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Commissioner\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Commissioner\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "hassankhan/config": "^2.1",
        "illuminate/container": "^6.5",
        "illuminate/contracts": "^6.5",
        "illuminate/events": "^6.5",
        "illuminate/routing": "^6.5",
        "illuminate/support": "^6.5",
        "mockery/mockery": "^1.2",
        "symfony/config": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
